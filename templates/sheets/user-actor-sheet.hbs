{{!-- systems/bizarre-adventures-d6/templates/sheets/user-actor-sheet.hbs --}}
<form class="sheet actor-sheet {{cssClass}}" autocomplete="off" data-actor-id="{{actor.id}}">
  <div class="jojo-sheet">
    <header class="sheet-header">
      <h1>{{actor.name}}</h1>
      <div class="health-display">
        Health:
        <span class="health-value">{{system.health.value}}</span>
        /
        <span class="health-max">{{system.health.max}}</span>
        {{#if (lte system.health.value 0)}}
          {{!-- If DD is already active, show the “Disable” (pulsing) button --}}
          {{#if darkDetermination}}
            <button
              type="button"
              class="dark-determination-toggle"
              title="Disable Dark Determination"
            >
              <i class="fas fa-fire pulse-dd-icon"></i>
            </button>
          {{!-- Otherwise (Health ≤ 0 but DD not yet active), show the “Enable” button --}}
          {{else}}
            <button
              type="button"
              class="dark-determination-toggle"
              title="Enable Dark Determination"
            >
              <i class="fas fa-fire static-dd-icon"></i>
            </button>
          {{/if}}
        {{/if}}
      </div>
    </header>

    <nav class="sheet-tabs tabs" data-group="primary">
      {{> actor-nav}}
    </nav>

    <section class="sheet-body">
      <!-- ─ Stats Tab ─ -->
      <div class="tab"
        data-tab="stats"
        data-group="primary">
          {{> actor-stats}}
      </div>

      <!-- ─ Biography Tab ─ -->
      <div class="tab"
        data-tab="bio"
        data-group="primary">
        <div class="bio-container">
          <div class="bio-row">
            <label>Name:</label>
            <input type="text"
              name="name"
              value="{{actor.name}}"
              placeholder="Enter name" />
          </div>
          <div class="bio-row">
            <label>Gender:</label>
            <input type="text"
              name="system.bio.gender"
              value="{{system.bio.gender}}"
              placeholder="Enter gender"
              />
          </div>
          <div class="bio-row">
            <label>Date of Birth:</label>
            <input type="date"
              name="system.bio.dob"
              value="{{system.bio.dob}}"
              />
          </div>
          <div class="bio-row">
            <label>Hit Limit:</label>
            <input type="number"
              name="system.health.max"
              min="0"
              value="{{system.health.max}}"
              />
          </div>
          <div class="bio-row">
            <label>Appearance:</label>
            <textarea name="system.bio.appearance" rows="3" placeholder="Describe appearance">{{system.bio.appearance}}</textarea>
          </div>
          <div class="bio-row">
            <label>Personality:</label>
            <textarea name="system.bio.personality" rows="3" placeholder="Describe personality">{{system.bio.personality}}</textarea>
          </div>
          <div class="bio-row">
            <label>Life Philosophy:</label>
            <textarea name="system.bio.philosophy" rows="3" placeholder="Enter life philosophy">{{system.bio.philosophy}}</textarea>
          </div>
          <div class="bio-row">
            <label>Backstory:</label>
            <textarea name="system.bio.backstory" rows="5" placeholder="Enter backstory">{{system.bio.backstory}}</textarea>
          </div>
            <select id="user-type" name="system.info.type">
              {{#each typeConfigs}}
                <option value="{{@key}}" {{#ifEquals ../system.info.type @key}}selected{{/ifEquals}}>
                  {{this.label}}
                </option>
              {{/each}}
            </select>
          {{> actor-class}}


        </div>
      </div>

      <!-- ───────────── Hits Tab ───────────── -->
      <div class="tab" data-tab="hit" data-group="primary">
        <div class="hit-container">
          <div class="hit-form">
            <button id="create-hit" type="button" title="Create Hit">
              <i class="fas fa-plus" aria-hidden="true"></i>
            </button>
          </div>

          <div class="hit-list scrollable-list">
            <ul id="hit-items">
              {{#each actor.items}}
                {{#if (eq this.type "hit")}}
                  <li data-item-id="{{this.id}}">
                    <span>{{this.name}} - Weight: {{this.system.weight}}, Quantity: {{this.system.quantity}}</span>
                    <p class="item-description">{{this.system.description}}</p>
                    {{#unless ../darkDetermination}}
                      <i class="fas fa-trash delete-hit" data-item-id="{{this.id}}"></i>
                    {{/unless}}
                  </li>
                {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>

      <!-- ───────────── Items Tab ───────────── -->
      <div class="tab" data-tab="item" data-group="primary">
        <div class="item-container">
          <div class="item-form">
            <button id="create-item" type="button" title="Create Item">
              <i class="fas fa-plus" aria-hidden="true"></i>
            </button>
          </div>

          <div class="item-list scrollable-list">
            <ul id="item-items">
              {{#each actor.items}}
                {{#if (eq this.type "item")}}
                  <li data-item-id="{{this.id}}">
                    <span>{{this.name}}</span>
                    <p class="item-description">{{this.system.description}}</p>
                    <i class="fas fa-trash delete-item" data-item-id="{{this.id}}"></i>
                  </li>
                {{/if}}
              {{/each}}
            </ul>
          </div>
        </div>
      </div>
    </section>
  </div>
</form>
