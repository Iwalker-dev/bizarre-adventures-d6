{{!-- systems/bizarre-adventures-d6/templates/partials/actor-nav.hbs --}}
{{#ifEquals actor.type "stand"}}
  <div class="button-container">
    <a class="item" data-tab="stats" data-group="primary">Stats</a>
  </div>
  <div class="button-container">
    <a class="item" data-tab="info" data-group="primary">Stand Info</a>
  </div>
{{/ifEquals}}
{{#ifEquals actor.type "user"}}
  <div class="button-container">
    <a class="item" data-tab="stats" data-group="primary">Stats</a>
  </div>
  <div class="button-container">
    <a class="item" data-tab="info" data-group="primary">Biography</a>
  </div>
{{/ifEquals}}
{{#ifEquals actor.type "power"}}
  <div class="button-container">
    <a class="item" data-tab="stats" data-group="primary">Stats</a>
  </div>
  <div class="button-container">
    <a class="item" data-tab="info" data-group="primary">Power Info</a>
  </div>
{{/ifEquals}}

{{#if actor.system.info.type}}
  {{!-- And only if the type isnâ€™t the literal string "None" --}}
  {{#ifEquals actor.system.info.type "None"}}
    {{!-- nothing --}}
  {{else}}
    <div class="button-container">
      <a class="item"
         data-tab="{{actor.system.info.type}}"
         data-group="primary">
        {{actor.system.info.type}}
      </a>
    </div>
  {{/ifEquals}}
{{/if}}

{{!-- If the actor is a user, finish also showing their hits and items --}}
{{#ifEquals actor.type "user"}}
  <div class="button-container">
    <a class="item" data-tab="hit" data-group="primary">Hits</a>
  </div>
  <div class="button-container">
    <a class="item" data-tab="item" data-group="primary">Items</a>
  </div>
{{/ifEquals}}